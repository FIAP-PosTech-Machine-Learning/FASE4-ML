version: '3.8'

services:
  api:
    build:
      context: ./docker
      dockerfile: Dockerfile
    ports:
      - "5000:5000"
    volumes:
      - ../api:/app
    environment:
      - FLASK_ENV=development

  streamlit:
    build:
      context: ./streamlit_app
      dockerfile: Dockerfile
    ports:
      - "8501:8501"
    volumes:
      - ../streamlit_app:/app

  monitoring:
    build:
      context: ./monitoring
      dockerfile: Dockerfile
    volumes:
      - ../monitoring:/app

networks:
  default:
    driver: bridge